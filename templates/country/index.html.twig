{% extends 'base.html.twig' %}

{% block title %}Hello CountryController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Hello ! âœ…</h1>

        {% if countries is empty %}
            <p>Aucune ville</p>
        {% else %}
            <ul>
                {% for country in countries %}
                    <li><a href="{{ path('country', {countryName: country.name}) }}">{{ country.name | upper }}</a></li>
                {% endfor %}
            </ul>
        {% endif %}

    </div>
{% endblock %}
